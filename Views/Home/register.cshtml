@section Styles {
    <link rel="stylesheet" href="~/css/register.css" />
}
@section Scripts {
    <script src="~/js/script.js"></script>
}

<div class="body-container">
    <div class="container">
        <div class="row">
            <div class="col-md-5 mx-auto">
                <div class="myform">
                    <div class="logo mb-3">
                        <div class="col-md-12 text-center">
                            <h1>Đăng ký</h1>
                        </div>
                    </div>

                    <form method="get" action="">
                        <div class="form-group">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" name="email" id="email" class="form-control">

                            <label for="password" class="form-label mt-4">Mật khẩu</label>
                            <input type="password" name="password" id="password" class="form-control">

                            <label for="confirm" class="form-label mt-4">Nhập lại mật khẩu</label>
                            <input type="password" name="confirm" id="confirm" class="form-control">

                            <div class="col-md-12 text-center mt-5">
                                <button type="submit" class="btn btn-block mybtn btn-primary tx-tfm" id="register">Đăng ký</button>
                            </div>

                            <div class="form-group mt-3">
                              <p class="text-center">Đã có tài khoản? <a href="/login" id="signup">Đăng nhập</a></p>
                           </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>