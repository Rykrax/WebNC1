@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

@section Scripts {
    <script src="~/js/login.js"></script>
}

<div class="body-container">
    <div class="container">
        <div class="row">
            <div class="col-md-5 mx-auto">
                <div class="myform">
                    <div class="logo mb-3">
                        <div class="col-md-12 text-center">
                            <h1>Đăng nhập</h1>
                        </div>
                    </div>

                    <form method="get" action="">
                        <div class="form-group">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" name="email" id="email" class="form-control">

                            <label for="password" class="form-label mt-3">Mật khẩu</label>
                            <input type="password" name="password" id="password" class="form-control">


                            <div class="row mb-4 mt-4">
                                <div class="col d-flex justify-content-center">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                                        <label class="form-check-label" for="form2Example31"> Nhớ mật khẩu </label>
                                    </div>
                                </div>

                                <div class="col text-center">
                                    <a href="#!" class="text-decoration-none">Quên mật khẩu?</a>
                                </div>
                            </div>

                            <div class="col-md-12 text-center">
                                <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Đăng nhập</button>
                            </div>

                            <div class="form-group mt-3">
                              <p class="text-center">Không có tài khoản? <a href="/register" id="signup">Đăng ký</a></p>
                           </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>